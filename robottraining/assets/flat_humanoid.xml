<mujoco model="flat_humanoid">
    <compiler angle="degree" inertiafromgeom="true"/>
    <option timestep="0.002" integrator="RK4" gravity="0 0 -9.81" density="1000" viscosity="0.002"/>
    <visual>
        <global offheight="1080"/>
    </visual>

    <default>
        <joint damping="1" stiffness="0" limited="true" armature="0.01" frictionloss="0.01"/>
        <geom type="capsule" size="0.05 0.2" rgba="0.8 0.6 0.4 1" friction="0.8 0.1 0.1"/>
        <motor ctrllimited="true" ctrlrange="-1 1" gear="120"/>
    </default>

    <worldbody>
        <geom name="floor" type="plane" size="20 20 0.1" pos="0 0 0" rgba="0.95 0.95 0.95 1"/>

        <body name="torso" pos="0 0 1.4">
            <freejoint name="root"/>
            <geom name="torso_geom" size="0.1 0.25" pos="0 0 0"/>
            <geom name="torso_lower" size="0.09 0.2" pos="0 0 -0.25"/>

            <body name="head" pos="0 0 0.35">
                <geom size="0.1" type="sphere" rgba="0.9 0.7 0.5 1"/>
            </body>

            <body name="thigh_right" pos="0 -0.09 -0.3">
                <joint name="hip_right_y" axis="0 1 0" range="-45 60"/>
                <joint name="hip_right_x" axis="1 0 0" range="-30 30"/>
                <geom size="0.06 0.25" pos="0 0 -0.25"/>

                <body name="shin_right" pos="0 0 -0.5">
                    <joint name="knee_right" axis="0 1 0" range="-120 5"/>
                    <geom size="0.05 0.25" pos="0 0 -0.25"/>

                    <body name="foot_right" pos="0 0 -0.5">
                        <joint name="ankle_right" axis="1 0 0" range="-30 30"/>
                        <geom type="box" size="0.09 0.04 0.02" pos="-0.09 0 -0.04" rgba="0.2 0.2 0.2 1" friction="1 0.1 0.1"/>
                    </body>
                </body>
            </body>

            <body name="thigh_left" pos="0 0.09 -0.3">
                <joint name="hip_left_y" axis="0 1 0" range="-45 60"/>
                <joint name="hip_left_x" axis="1 0 0" range="-30 30"/>
                <geom size="0.06 0.25" pos="0 0 -0.25"/>

                <body name="shin_left" pos="0 0 -0.5">
                    <joint name="knee_left" axis="0 1 0" range="-120 5"/>
                    <geom size="0.05 0.25" pos="0 0 -0.25"/>

                    <body name="foot_left" pos="0 0 -0.5">
                        <joint name="ankle_left" axis="1 0 0" range="-30 30"/>
                        <geom type="box" size="0.09 0.04 0.02" pos="-0.09 0 -0.04" rgba="0.2 0.2 0.2 1" friction="1 0.1 0.1"/>
                    </body>
                </body>
            </body>

            <body name="upper_arm_right" pos="0 -0.2 0.15">
                <joint name="shoulder_right_y" axis="0 1 0" range="-90 90"/>
                <joint name="shoulder_right_x" axis="1 0 0" range="-90 45"/>
                <geom size="0.045 0.18" pos="0 0 -0.18"/>

                <body name="lower_arm_right" pos="0 0 -0.36">
                    <joint name="elbow_right" axis="0 1 0" range="-120 0"/>
                    <geom size="0.04 0.18" pos="0 0 -0.18"/>
                </body>
            </body>

            <body name="upper_arm_left" pos="0 0.2 0.15">
                <joint name="shoulder_left_y" axis="0 1 0" range="-90 90"/>
                <joint name="shoulder_left_x" axis="1 0 0" range="-45 90"/>
                <geom size="0.045 0.18" pos="0 0 -0.18"/>

                <body name="lower_arm_left" pos="0 0 -0.36">
                    <joint name="elbow_left" axis="0 1 0" range="-120 0"/>
                    <geom size="0.04 0.18" pos="0 0 -0.18"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="hip_right_y_act" joint="hip_right_y"/>
        <motor name="hip_right_x_act" joint="hip_right_x"/>
        <motor name="knee_right_act" joint="knee_right"/>
        <motor name="ankle_right_act" joint="ankle_right"/>
        <motor name="hip_left_y_act" joint="hip_left_y"/>
        <motor name="hip_left_x_act" joint="hip_left_x"/>
        <motor name="knee_left_act" joint="knee_left"/>
        <motor name="ankle_left_act" joint="ankle_left"/>
        <motor name="shoulder_right_y_act" joint="shoulder_right_y"/>
        <motor name="shoulder_right_x_act" joint="shoulder_right_x"/>
        <motor name="elbow_right_act" joint="elbow_right"/>
        <motor name="shoulder_left_y_act" joint="shoulder_left_y"/>
        <motor name="shoulder_left_x_act" joint="shoulder_left_x"
        />
        <motor name="elbow_left_act" joint="elbow_left"/>
    </actuator>
</mujoco>
